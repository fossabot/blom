{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "declaration": true,
    "declarationDir": "types",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "outDir": "lib",
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/types/*"
      ]
    },
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es2016",
      "es2017",
      "es5",
      "es6",
      "es7",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
